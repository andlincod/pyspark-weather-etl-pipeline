# Environment Configuration for Weather ETL Pipeline
# Copy this file to .env and modify the values as needed

# Environment (dev, prod, test)
ENV=dev

# Data Paths
RAW_PATH=data/raw/weatherHistory.csv
PROCESSED_DIR=data/processed/
TEMP_DIR=data/temp/
BACKUP_DIR=data/backup/

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/etl_pipeline.log

# Spark Configuration
SPARK_MASTER=local[*]
SPARK_APP_NAME=WeatherETLPipeline
SPARK_DRIVER_MEMORY=2g
SPARK_EXECUTOR_MEMORY=2g
SPARK_MAX_RESULT_SIZE=1g

# Data Quality Configuration
MAX_NULL_PERCENTAGE=0.1
TEMP_MIN=-50.0
TEMP_MAX=60.0

# ETL Configuration
BATCH_SIZE=10000
CHECKPOINT_INTERVAL=1000

# Output Configuration
OUTPUT_FORMAT=parquet
COMPRESSION=snappy

# Jupyter Configuration (for development)
JUPYTER_PORT=8888
JUPYTER_TOKEN=your_jupyter_token_here
